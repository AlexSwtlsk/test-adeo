{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"typeRoots": [
			"types/**"
		]
	},
	"include": [
		"**/*",
		"src/**/*"
	],
	"exclude": ["node_modules", "dist"],
	"lib": [
		"es2015"
	]
}